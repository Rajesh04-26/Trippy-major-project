<% layout("/layouts/boilerplate") -%>
<link rel="stylesheet" href="/show.css">

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%-JSON.stringify(listing) %>;
</script>

<div class="row justify-content-center">
  <!-- Listing Card -->
  <div class="col-12 col-md-10 col-lg-8">
    <div class="card show-card mb-3">
      <h3 class="text-center"><%= listing.title %></h3>
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_img">
      <div class="card-body">
        <p class="card-text">Owned by: <i><%= listing.owner.username %></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>

    <!-- Edit/Delete Buttons -->
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="d-flex justify-content-center mb-3 flex-wrap gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    <% } %>

    <!-- Review Form -->
    <% if(currUser) { %>
      <hr />
      <h2 class="text-center">Leave a Rating</h2>
      <form method="POST" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>
        <div class="star-rating d-flex justify-content-center mb-2" id="starRating">
          <span class="star" data-value="1"></span>
          <span class="star" data-value="2"></span>
          <span class="star" data-value="3"></span>
          <span class="star" data-value="4"></span>
          <span class="star" data-value="5"></span>
        </div>
        <p class="text-center">Your rating: <span id="ratingValue">0</span> / 5</p>
        <input type="hidden" name="review[rating]" id="ratingInput" value="0">

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please submit some comment for review.</div>
        </div>

        <div class="text-center">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
    <% } %>

    <!-- Reviews List -->
    <% if(listing.reviews.length > 0) { %>
      <hr />
      <h4 class="text-center">All Reviews</h4>
      <div class="row">
        <% listing.reviews.forEach(review => { %>
          <div class="col-12 col-md-6 mb-3">
            <div class="card review-card">
              <div class="card-body">
                <h5 class="reviewer-name"><%= review.author.username %></h5>
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <div>
                    <% for (let i = 1; i <= 5; i++) { %>
                      <i class="<%= i <= Math.floor(review.rating) ? 'fas fa-star' : (i - review.rating < 1 ? 'fas fa-star-half-alt' : 'far fa-star') %> text-warning"></i>
                    <% } %>
                  </div>
                  <% if (review.createdAt) { %>
                    <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString() %></small>
                  <% } %>
                </div>
                <p class="mb-1"><%= review.comment %></p>
              </div>

              <!-- Delete Button -->
              <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="text-end mt-2">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
    <br>
    <br>

    <!-- Map Section -->
    <div class="mb-3">
      <h3 class="text-center">Where you'll be</h3>
      <div id="map" class="w-100" style="height: 300px;"></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
<script src="/js/review.js"></script>
