<% layout("/layouts/boilerplate") -%>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%-JSON.stringify(listing) %>;
</script>

<div class="row">
  <div class="col-8 offset-2">
    <div class="card col-6 offset-2 show-card">
      <h3><%= listing.title %></h3>
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_img">
      <div class="card-body">
        <p class="card-text"> Owned by : <i><%= listing.owner.username %></i>
        <p class="card-text" style="width: 450px;"><%= listing.description %></p>
        <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>

  <br />

  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger col-1 offset-4">Edit</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
  <% } %>


  <!-- REVIEW FORM -->
  <div class="col-8 offset-3 mb-3">
  <% if(currUser) { %>
  <hr />
  <h2>Leave a Rating</h2>
<form method="POST" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>
  <div class="star-rating" id="starRating">
    <span class="star" data-value="1"></span>
    <span class="star" data-value="2"></span>
    <span class="star" data-value="3"></span>
    <span class="star" data-value="4"></span>
    <span class="star" data-value="5"></span>
  </div>
  <p>Your rating: <span id="ratingValue">0</span> / 5</p>
  <input type="hidden" name="review[rating]" id="ratingInput" value="0">

  <!-- COMMENT TEXTAREA -->
<div class="mb-3 mt-3">
  <label for="comment" class="form-label">Comment</label>
  <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
  <div class="invalid-feedback">please submit some comment for review.</div>
</div>

  <button class="btn btn-outline-dark">Submit</button>
  </form>
<% } %>
  
<% if(listing.reviews.length > 0) { %>
<hr />
<div class="mt-3">
  <h4>All Reviews</h4>
  <% if (listing.reviews.length === 0) { %>
    <p class="text-muted">No reviews yet. Be the first to leave one!</p>
  <% } else { %>
  <div class="row">
    <% listing.reviews.forEach(review => { %>
      <div class="col-md-6 mb-3">
        <div class="card review-card">
          <div class="card-body">
            <h4 class="reviewer-name"><%= review.author.username %></h4>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div>
                <% for (let i = 1; i <= 5; i++) { %>
                  <i class="<%= i <= Math.floor(review.rating) ? 'fas fa-star' : (i - review.rating < 1 ? 'fas fa-star-half-alt' : 'far fa-star') %> text-warning"></i>
                <% } %>
              </div>
              <% if (review.createdAt) { %>
                <small class="text-muted">
                  <%= new Date(review.createdAt).toLocaleDateString() %>
                </small>
              <% } %>
            </div>

            <p class="mb-1"><%= review.comment %></p>
          </div>

          <!-- Delete Button -->
          <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="text-end mt-2">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
  <% } %>
</div> 
<% } %>
</div>
<div class="col-6 offset-2 mb-3">
  <h3>where you'll be</h3>
  <div id="map"></div>
</div>
</div>
</div>
<script src="/js/map.js"></script>
<script src="/js/review.js"></script> 